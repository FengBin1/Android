            <Button style="@style/btnStyle" android:foreground="@drawable/five" />
        </LinearLayout>
        <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_gravity="center"
            android:layout_marginTop="15dp" android:orientation="horizontal">
            <Button style="@style/btnStyle" android:foreground="@drawable/one" />
            <Button style="@style/btnStyle" android:foreground="@drawable/two" />
            <Button style="@style/btnStyle" android:foreground="@drawable/box" />
            <Button style="@style/btnStyle" android:foreground="@drawable/four" />
        </LinearLayout>
        <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_gravity="center"
            android:layout_marginTop="15dp" android:orientation="horizontal">
            <Button style="@style/btnStyle" android:foreground="@drawable/five" />
            <Button style="@style/btnStyle" android:foreground="@drawable/box" />
            <Button style="@style/btnStyle" android:foreground="@drawable/three" />
